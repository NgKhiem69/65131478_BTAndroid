<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Máy Tính 2 Số"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#EF6C00"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Ô nhập số thứ 1 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutNum1"
        style="@style/Widget.Material3.TextInputLayout.FilledBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nhập số thứ nhất"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtNum1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Ô nhập số thứ 2 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutNum2"
        style="@style/Widget.Material3.TextInputLayout.FilledBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nhập số thứ hai"
        app:layout_constraintTop_toBottomOf="@id/layoutNum1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtNum2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Các nút chức năng -->
    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/layoutNum2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTong"
            style="@style/Widget.Material3.Button.IconButton.Filled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng"
            android:backgroundTint="#43A047"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHieu"
            style="@style/Widget.Material3.Button.IconButton.Filled"            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hiệu"
            android:backgroundTint="#1E88E5"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTich"
            style="@style/Widget.Material3.Button.IconButton.Filled"            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tích"
            android:backgroundTint="#F4511E"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnThuong"
            style="@style/Widget.Material3.Button.IconButton.Filled"            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thương"
            android:backgroundTint="#8E24AA"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp"/>
    </LinearLayout>

    <!-- Kết quả -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kết quả sẽ hiện ở đây"
        android:textSize="20sp"
        android:textColor="#000000"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
