<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Khi nhấn -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#FFB74D"
                android:centerColor="#FF8A65"
                android:endColor="#4DB6AC"
                android:type="linear" />
            <corners android:radius="20dp" />
            <stroke android:width="2dp" android:color="#FFFFFF" />
            <padding android:left="12dp" android:right="12dp" android:top="12dp" android:bottom="12dp"/>
        </shape>
    </item>

    <!-- Bình thường -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#FFE082"
                android:centerColor="#FFB74D"
                android:endColor="#4DB6AC"
                android:type="linear" />
            <corners android:radius="20dp" />
            <stroke android:width="1dp" android:color="#DDFFFFFF" />
            <padding android:left="12dp" android:right="12dp" android:top="12dp" android:bottom="12dp"/>
        </shape>
    </item>
</selector>
